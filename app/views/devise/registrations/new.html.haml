//新規登録画面

%h2 Sign up
= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user
    .single-container
      .single-header
      .single-main
        .single-main__container
          .single-main__container__title
            会員情報入力
          .single-main__container__form
            .single-main__container__form__group
              %label{:for => "nickname"} ニックネーム
              %span.form-require 必須
              %br/
              = f.text_field :nickname, placeholder: " 例) 山田太郎"
              -# %input.input-default.has-error{"aria-describedby" => "nickname-error", "aria-invalid" => "true", :name => "nickname", :placeholder => " 例) 山田太郎", :type => "text", :value => ""}/
            .single-main__container__form__group
              %label{:for => "email"} メールアドレス
              %span.form-require 必須
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " PC・携帯どちらでも可"
              -# %input.input-default{:name => "email", :placeholder => " PC・携帯どちらでも可", :type => "email", :value => ""}/
            .single-main__container__form__group
              %label{:for => "password"} パスワード
              %span.form-require 必須
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "new-password", placeholder: " 7文字以上の半角英数字"
              -# %input.input-default{:name => "password", :placeholder => " 7文字以上の半角英数字", :type => "password"}/
            .single-main__container__form__group
              %label{:for => "password"} パスワード
              %span.form-require 必須
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " 7文字以上の半角英数字"
            .single-main__container__form__group
              = f.submit "Next"